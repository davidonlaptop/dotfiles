# Environment variables
# 

# Docker Machine: Configures the variables DOCKER_HOST, DOCKER_TLS_VERIFY, DOCKER_CERT_PATH, DOCKER_MACHINE_NAME 
#eval "$(docker-machine env default)"
export DOCKER_TLS_VERIFY="1"
export DOCKER_HOST="tcp://192.168.99.100:2376"
export DOCKER_CERT_PATH="/Users/david/.docker/machine/machines/default"
export DOCKER_MACHINE_NAME="default"


# Default editor
export EDITOR="vim"


# History
# read http://unix.stackexchange.com/questions/1288/preserve-bash-history-in-multiple-terminal-windows/1292#1292
#export HISTSIZE=4096;
#export HISTFILESIZE=16384;
#export SAVEHIST=4096
# When the shell exits, append to the history file instead of overwriting it
#shopt -s histappend
# Avoid duplicates in bash history
export HISTCONTROL=ignoredups:erasedups


# Colors
export CLICOLOR=1         # Colored ls output
export GREP_OPTIONS='--color=auto'  # Colored Grep output


# Bash settings #
#################
shopt -s nocaseglob  # Case-insensitive globbing (used in pathname expansion)
shopt -s cdspell     # Autocorrect typos in path names when using `cd`

# Do not autocomplete when accidentally pressing Tab on an empty line.
shopt -s no_empty_cmd_completion

# Recursive globbing with "**" (requires bash 4; OSX uses bash 3)
if [ ${BASH_VERSINFO[0]} -ge 4 ]; then
    shopt -s globstar
fi

# Check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize


# Java / Scala / Play! (WARNING: untested on Linux)
#export JAVA_HOME=$(/usr/libexec/java_home)  # Read JAVA_HOME from OSX system
export JAVA_HOME="/Library/Java/JavaVirtualMachines/jdk1.7.0_80.jdk/Contents/Home"
export SCALA_HOME=$HOME/opt/scala
export PLAY_HOME=$HOME/opt/play-2.2.3
export PATH="$PATH:$SCALA_HOME/bin:$PLAY_HOME"

# Spark
export SPARK_HOME=$HOME/opt/spark
export PATH="$PATH:$SPARK_HOME/bin"


# Python
#
# Fixes: "warning: install_lib: byte-compiling is disabled, skipping."
#        "error: byte-compiling is disabled."
# Actually, I am not sure the line below is required.
# I think the fix is to choose Python 2.7.0 interpretor in PyCharm instead of default 2.6.9
export PYTHONDONTWRITEBYTECODE=0
